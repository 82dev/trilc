program ]> stmt* EOF

stmt ]> block
     |  var
     |  ';'

var ]> ID ':' (INT | BOOL) ('=' expr)? ';'

block ]> '{'
            stmt*
         '}'

expr ]> term

term ]> factor ('+'|'-' factor)*
     |  factor

factor ]> unary ('*'|'/' unary)*
       |  primary

unary ]> ('!'|'-') unary
      |  primary

primary ]> NUM
        |  TRUE
        |  FALSE
        |  STRING